


import sys
sys.float_info.max

mass_names_list = ["gigatonne", "megatonne", "tonne", "kilogram", "gram", "milligram", "microgram", "nanogram", "microgram", "pound", "ounce"]
time_names = ["Second", "Minute", "Hour", "Week", "Month", "Year", "Decade", "Century", "Millennium"]
Temp_names_list = ["Celsius", "Fahrenheit", "Kelvin", "Rankine", "Reaumur"]
dist_names_list = ["Kilometer", "Hectometer", "Dekameter", "Meter", "Decimeter", "Centimeter", "Milimeter", "Micrometer"]


def mass_names_word1(x):
    mass_names_list_index =0
    for _ in mass_names_list:
        mass_names_list_index +=1
    y = mass_names_list[x -1]   
    return y
        
def mass_names_word2(x):
    mass_names_list_index =0
    for _ in mass_names_list:
        mass_names_list_index +=1
    y = mass_names_list[x -1]   
    return y  

