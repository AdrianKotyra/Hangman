def mass_names():
    print("(List of mass units)")
    print("-------------------------")
    mass_names_list_index =0
    for _ in mass_names_list:
        mass_names_list_index +=1
        print("[" + str(mass_names_list_index) + "]" + _ )
    print("-------------------------")
    print("[0]Exit") 
     

def Time_names():
    print("(List of time units)")
    print("-------------------------")
    time_names_index =0
    for _ in time_names:
        time_names_index +=1
        print("[" + str(time_names_index) + "]" + _ )
    print("-------------------------")
    print("[0]Exit")

def Temp_names():
    print("(List of temperature units)")
    print("-------------------------")
